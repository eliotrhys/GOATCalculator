<% include ../partials/header %>
<div class="container">
  <div class="row">

    <h1 style="text-align: center;">Edit <%= fighter.name %></h1>
    <div style="width: 30%; margin: 25px auto;">
      <form action="/fighters/<%= fighter._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="fighter[name]" value="<%= fighter.name %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="number" name="fighter[price]" value="<%= fighter.price %>" min="0.01" step="0.01">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="fighter[image]" value="<%= fighter.image %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="fighter[description]" value="<%= fighter.description %>">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a href="/fighters">Go back</a>
    </div>


  </div>
</div>

<% include ../partials/footer %>
