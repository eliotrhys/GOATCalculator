<%- include ("../partials/header.ejs") %>

<div class="container">
  <header class="jumbotron">
    <div class="row">
      <div class="col-12">
        <h1 class="text-center">🐐🖩 Goat Calculator</h1>
        <p>View our handpicked fighters from all over the world!</p>
        <p><a class="btn btn-primary btn-lg" href="/fighters/new">Add New Fighter</a></p>
      </div>
    </div>
  </header>

  <div class="row">

      <% fighters.forEach(function(fighter) { %>
        <div class="col-12 col-md-6 col-lg-4">
          <a href="/fighters/<%= fighter._id %>">
            <div class="card-hover-container">
              <div class="card background-card" style="background-image: url(<%= fighter.image %>); height: 500px; border: none; border-radius: 0px;">
                <img src="<%= fighter.image %>" style="visibility: hidden;" class="card-image" />
                <div class="overlay">
                  <div class="overlay-text"><%= fighter.name %> <%= fighter.dateOfBirth %></div>
                </div>
              </div>
            </div>
          </a>
        </div>
      <% }); %>

  </div>
</div>

<%- include ("../partials/footer") %>